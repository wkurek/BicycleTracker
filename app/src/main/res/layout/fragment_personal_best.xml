<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tracker.hfad.com.bicycletracker.PersonalBestFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#eaeaea">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="56dp"
           android:gravity="center"
           android:background="#164a59"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:background="@drawable/start_feature_round_button"
               android:src="@mipmap/ic_fitness_center_black_36dp"
               android:padding="4dp"
               android:layout_marginRight="16dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="32dp"
               android:textSize="24sp"
               android:textColor="#fff"
               android:text="Personal records"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="56dp"
           android:gravity="center"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="36dp"
               android:layout_height="36dp"
               android:background="@drawable/start_feature_round_button"
               android:src="@drawable/ic_swap_calls_black_24dp"
               android:padding="4dp"
               android:layout_marginRight="16dp"/>

           <TextView
               android:layout_width="180dp"
               android:layout_height="28dp"
               android:textSize="21sp"
               android:id="@+id/personal_record_distance"
               android:textAlignment="center"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="56dp"
           android:gravity="center"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="36dp"
               android:layout_height="36dp"
               android:background="@drawable/start_feature_round_button"
               android:src="@drawable/ic_timer_black_24dp"
               android:padding="4dp"
               android:layout_marginRight="16dp"/>

           <TextView
               android:layout_width="180dp"
               android:layout_height="28dp"
               android:textSize="21sp"
               android:id="@+id/personal_record_time"
               android:textAlignment="center"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="56dp"
           android:gravity="center"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="36dp"
               android:layout_height="36dp"
               android:background="@drawable/start_feature_round_button"
               android:src="@drawable/ic_directions_run_black_24dp"
               android:padding="4dp"
               android:layout_marginRight="16dp"/>

           <TextView
               android:layout_width="180dp"
               android:layout_height="28dp"
               android:textSize="21sp"
               android:id="@+id/personal_record_calories"
               android:textAlignment="center"/>

       </LinearLayout>



       <View
           android:layout_height="1dip"
           android:layout_width="match_parent"
           android:background="#164a59" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="260dp"
           android:layout_margin="20dp"
           android:orientation="vertical"
           android:gravity="center_horizontal">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="34dp"
               android:gravity="center"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="50dp"
                   android:layout_height="28dp"
                   android:textSize="21sp"
                   android:text="This"
                   android:layout_marginRight="20dp"/>

               <Spinner
                   android:layout_width="100dp"
                   android:layout_height="32dp"
                   android:id="@+id/personal_table_spinner"></Spinner>

            </LinearLayout>

           <View
               android:layout_height="1dip"
               android:layout_width="match_parent"
               android:background="#164a59"
               android:layout_marginLeft="36dp"
               android:layout_marginRight="36dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="32dp"
               android:gravity="center"
               android:orientation="horizontal"
               android:layout_margin="10dp">

               <ImageView
                   android:layout_width="28dp"
                   android:layout_height="28dp"
                   android:background="@drawable/start_feature_round_button"
                   android:src="@drawable/ic_slow_motion_video_black_24dp"
                   android:padding="4dp"
                   android:layout_marginRight="16dp"/>

               <TextView
                   android:layout_width="180dp"
                   android:layout_height="24dp"
                   android:textSize="20sp"
                   android:id="@+id/personal_table_number"
                   android:textAlignment="center"/>

           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="32dp"
               android:gravity="center"
               android:orientation="horizontal"
               android:layout_margin="10dp">

               <ImageView
                   android:layout_width="28dp"
                   android:layout_height="28dp"
                   android:background="@drawable/start_feature_round_button"
                   android:src="@drawable/ic_swap_calls_black_24dp"
                   android:padding="4dp"
                   android:layout_marginRight="16dp"/>

               <TextView
                   android:layout_width="180dp"
                   android:layout_height="24dp"
                   android:textSize="20sp"
                   android:id="@+id/personal_table_distance"
                   android:textAlignment="center"/>

           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="32dp"
               android:gravity="center"
               android:orientation="horizontal"
               android:layout_margin="10dp">

               <ImageView
                   android:layout_width="28dp"
                   android:layout_height="28dp"
                   android:background="@drawable/start_feature_round_button"
                   android:src="@drawable/ic_timer_black_24dp"
                   android:padding="4dp"
                   android:layout_marginRight="16dp"/>

               <TextView
                   android:layout_width="180dp"
                   android:layout_height="24dp"
                   android:textSize="20sp"
                   android:id="@+id/personal_table_time"
                   android:textAlignment="center"/>

           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="32dp"
               android:gravity="center"
               android:orientation="horizontal"
               android:layout_margin="10dp">

               <ImageView
                   android:layout_width="28dp"
                   android:layout_height="28dp"
                   android:background="@drawable/start_feature_round_button"
                   android:src="@drawable/ic_directions_run_black_24dp"
                   android:padding="4dp"
                   android:layout_marginRight="16dp"/>

               <TextView
                   android:layout_width="180dp"
                   android:layout_height="24dp"
                   android:textSize="20sp"
                   android:id="@+id/personal_table_calories"
                   android:textAlignment="center"/>

           </LinearLayout>




       </LinearLayout>







   </LinearLayout>



</FrameLayout>
