<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    tools:context="tracker.hfad.com.bicycletracker.TrainingActivity"
    android:orientation="vertical"
    android:background="#dfdfdf">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:id="@+id/training_gps"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/white" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="72sp"
        android:id="@+id/huge_time_view"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_marginBottom="18dp"
        android:textColor="#313131" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_height="46dp"
            android:layout_width="46dp"
            android:padding="4dp"
            android:src="@drawable/ic_swap_calls_black_24dp"
            android:background="@drawable/start_feature_round_button"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="42dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:id="@+id/training_distance"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_height="46dp"
            android:layout_width="46dp"
            android:padding="8dp"
            android:src="@drawable/max_speed"
            android:background="@drawable/start_feature_round_button"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="42dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:id="@+id/training_moment_velocity"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_height="46dp"
            android:layout_width="46dp"
            android:padding="8dp"
            android:src="@drawable/avg_speed"
            android:background="@drawable/start_feature_round_button"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="42dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:id="@+id/training_avarange_velocity"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_height="46dp"
            android:layout_width="46dp"
            android:padding="6dp"
            android:src="@drawable/ic_directions_run_black_24dp"
            android:background="@drawable/start_feature_round_button"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="42dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:id="@+id/training_calories"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_height="46dp"
            android:layout_width="46dp"
            android:padding="6dp"
            android:src="@mipmap/ic_terrain_black_24dp"
            android:background="@drawable/start_feature_round_button"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="42dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:id="@+id/training_altitude"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="28dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop_button"
            android:text="@string/stop_button"
            android:background="@drawable/stop_shape"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:width="135dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:onClick="onStopClicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pause_button"
            android:text="@string/pause_button"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:width="135dp"
            android:background="@drawable/pause_shape"
            android:textStyle="bold"
            android:onClick="onPauseClicked"/>


    </LinearLayout>



</LinearLayout>